{
  "compilerOptions": {
    "baseUrl": "./src",
    "jsx": "react-jsx",
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "paths": {
      "@/*": ["*"]
    },
    "sourceMap": true,
    "strict": true,
    "target": "es2017"
  },
  "compileOnSave": true,
  "include": ["src"],
  "exclude": ["scripts"]
}
