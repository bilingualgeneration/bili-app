{
  "name": "functions",
  "scripts": {
    "xlint": "eslint --fix --ext .js,.ts .",
    "lint": "",
    "env:development": "cp .env.development .env",
    "env:live": "cp .env.live .env",
    "use:development": "firebase use bilingual-generation-dev",
    "use:live": "firebase use bilingual-generation-live",
    "make:development": "run-s env:development use:development",
    "make:live": "run-s env:live use:live",
    "build": "run-s schema:sync build:internal",
    "build:live": "run-s make:live schema:sync build:internal",
    "build:watch": "run-s schema:sync build:internal:watch",
    "build:internal": "rm -rf lib/*; tsc && tsc-alias; cp -rf src/assets lib/assets",
    "build:internal:watch": "rm -rf lib/*; concurrently \"tsc --watch\" \"tsc-alias 0w\"",
    "schema:sync:": "rm src/schema/*; cp ../../schema/* src/schema",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "deploy:development": "run-s make:development deploy",
    "deploy:live": "run-s make:live deploy",
    "logs": "firebase functions:log",
    "copy-sql": "copyfiles -u 2 src/queries/**/*.sql lib/queries"
  },
  "engines": {
    "node": "18"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@aws-sdk/client-ses": "^3.731.1",
    "@google-cloud/bigquery": "^7.7.1",
    "@google-cloud/tasks": "^5.5.2",
    "axios": "^1.7.7",
    "cheerio": "^1.0.0",
    "firebase": "^10.4.0",
    "firebase-admin": "^11.11.1",
    "firebase-functions": "^4.3.1",
    "nodemailer": "^6.10.0",
    "pdf-lib": "^1.17.1",
    "pdfkit": "^0.16.0",
    "pluralize": "^8.0.0",
    "puppeteer": "16.2.0",
    "svg-to-pdfkit": "^0.1.8",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/pluralize": "^0.0.33",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "concurrently": "^9.0.1",
    "copyfiles": "^2.4.1",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "tsc-alias": "^1.8.10",
    "typescript": "^4.9.0"
  },
  "private": true
}
